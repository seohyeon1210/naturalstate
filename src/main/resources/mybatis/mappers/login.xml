<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="fs.four.naturalstate.user.dao.LoginUserDAO">
    <!-- 사용자 정보를 userId로 검색 -->
    <select id="findByUserId" resultType="fs.four.naturalstate.user.vo.UserVO">
        <![CDATA[
        SELECT userId, password, userName, phone, zip, address, detailAddress, email, receiveEmail, auth
        FROM users
        WHERE userId = #{userId}
        ]]>
    </select>
</mapper>
